---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout
  title="Contact Hasiyu - SMART Goals Template Support"
  description="Get help with SMART goals templates. Contact us for support, questions, or feedback about our free goal-setting resources."
>
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact Us</Fragment>
      <Fragment slot="desc">Have questions? We'd love to hear from you.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Feedback & Support</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          We value your feedback, suggestions, and questions. Whether you have ideas, comments, or need help with our SMART goals templates, feel free to reach out via the form or email.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:hi@hasiyu.com" class="hover:text-indigo-600">
              hi@hasiyu.com
            </a>
          </div>
        </div>
        <div class="mt-8">
          <h3 class="font-medium text-lg text-gray-800 mb-3">Quick Links</h3>
          <ul class="space-y-2 text-slate-600">
            <li>
              <a href="/" class="hover:text-indigo-600">Browse Templates</a>
            </li>
            <li>
              <a href="/blog" class="hover:text-indigo-600">Read Our Blog</a>
            </li>
          </ul>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
